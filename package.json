{
    "name": "yasgui-react",
    "version": "0.1.0",
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "web-vitals": "4.2.2"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.4.8",
        "@testing-library/react": "16.0.0",
        "@testing-library/user-event": "14.5.2",
        "@vitejs/plugin-react-swc": "^3.7.0",
        "bestzip": "^2.2.1",
        "ncp": "^2.0.0",
        "prettier": "^3.3.3",
        "vite": "^5.3.4"
    },
    "scripts": {
        "copy-static": "ncp pages build && ncp temp_dist build/sparql",
        "build-react": "vite build --base=/sparql",
        "start": "vite",
        "build": "yarn build-react && yarn copy-static && npm run create-zip",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "create-zip": "cd build && bestzip build.zip *",
        "lint": "eslint src/**/*.js",
        "_format": "prettier \"**/*.{js,jsx,css,html}\"",
        "format": "npm run _format -- --write"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "react-app",
            "react-app/jest"
        ],
        "rules": {
            "quotes": "error"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
