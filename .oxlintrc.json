{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["react", "vitest"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "rules": {
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "vitest/expect-expect": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
